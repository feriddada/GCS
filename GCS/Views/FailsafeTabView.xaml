<UserControl x:Class="GCS.Views.FailsafeTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="480">

    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBackground" Color="#1C2128"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2D333D"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#8B949E"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#3FB950"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FF9500"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F85149"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#58A6FF"/>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#2D333D" BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="1" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#373E47"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Indicator Converter -->
        <Style x:Key="StatusEllipse" TargetType="Ellipse">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <!-- Header -->
            <Grid Margin="5,5,5,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="FAILSAFE STATUS" 
                              Foreground="{StaticResource SecondaryText}"
                              FontSize="11"
                              FontWeight="Bold"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                              Foreground="{StaticResource AccentBlue}"
                              FontSize="10"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="⟳ REFRESH" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource ToggleButtonStyle}"
                        Width="80"/>
            </Grid>

            <!-- RC Failsafe -->
            <Border Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15"
                    Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Style="{StaticResource StatusEllipse}">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding RcStatusColor}"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="RC FAILSAFE" 
                                  Foreground="{StaticResource PrimaryText}"
                                  FontSize="13"
                                  FontWeight="Bold"/>
                        <TextBlock Foreground="{StaticResource SecondaryText}" FontSize="10">
                            <Run Text="Throttle threshold:"/>
                            <Run Text="{Binding RcFailsafeThreshold, StringFormat=F0}"/>
                            <Run Text="µs"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Column="2"
                              Text="{Binding RcStatusText}"
                              FontSize="10"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding RcStatusColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <Button Grid.Column="3" 
                            Command="{Binding ToggleRcFailsafeCommand}"
                            Style="{StaticResource ToggleButtonStyle}">
                        <Button.Content>
                            <TextBlock Text="{Binding RcFailsafeEnabled, Converter={StaticResource BoolToOnOffConverter}, FallbackValue=TOGGLE}"/>
                        </Button.Content>
                    </Button>
                </Grid>
            </Border>

            <!-- Battery Failsafe -->
            <Border Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15"
                    Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Style="{StaticResource StatusEllipse}">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding BatteryStatusColor}"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="BATTERY FAILSAFE" 
                                  Foreground="{StaticResource PrimaryText}"
                                  FontSize="13"
                                  FontWeight="Bold"/>
                        <TextBlock Foreground="{StaticResource SecondaryText}" FontSize="10">
                            <Run Text="Low voltage:"/>
                            <Run Text="{Binding BatteryFailsafeVoltage, StringFormat=F1}"/>
                            <Run Text="V"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Column="2"
                              Text="{Binding BatteryStatusText}"
                              FontSize="10"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding BatteryStatusColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <Button Grid.Column="3" 
                            Command="{Binding ToggleBatteryFailsafeCommand}"
                            Style="{StaticResource ToggleButtonStyle}">
                        <Button.Content>
                            <TextBlock Text="{Binding BatteryFailsafeEnabled, Converter={StaticResource BoolToOnOffConverter}, FallbackValue=TOGGLE}"/>
                        </Button.Content>
                    </Button>
                </Grid>
            </Border>

            <!-- GPS Failsafe -->
            <Border Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15"
                    Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Style="{StaticResource StatusEllipse}">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding GpsStatusColor}"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="GPS FAILSAFE" 
                                  Foreground="{StaticResource PrimaryText}"
                                  FontSize="13"
                                  FontWeight="Bold"/>
                        <TextBlock Text="Automatic on GPS loss" 
                                  Foreground="{StaticResource SecondaryText}"
                                  FontSize="10"/>
                    </StackPanel>

                    <TextBlock Grid.Column="2"
                              Text="{Binding GpsStatusText}"
                              FontSize="10"
                              FontWeight="Bold"
                              VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding GpsStatusColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- GCS Failsafe -->
            <Border Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15"
                    Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Style="{StaticResource StatusEllipse}">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding GcsStatusColor}"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="GCS FAILSAFE" 
                                  Foreground="{StaticResource PrimaryText}"
                                  FontSize="13"
                                  FontWeight="Bold"/>
                        <TextBlock Foreground="{StaticResource SecondaryText}" FontSize="10">
                            <Run Text="Timeout:"/>
                            <Run Text="{Binding GcsFailsafeTimeout, StringFormat=F0}"/>
                            <Run Text="sec"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Column="2"
                              Text="{Binding GcsStatusText}"
                              FontSize="10"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding GcsStatusColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <Button Grid.Column="3" 
                            Command="{Binding ToggleGcsFailsafeCommand}"
                            Style="{StaticResource ToggleButtonStyle}">
                        <Button.Content>
                            <TextBlock Text="{Binding GcsFailsafeEnabled, Converter={StaticResource BoolToOnOffConverter}, FallbackValue=TOGGLE}"/>
                        </Button.Content>
                    </Button>
                </Grid>
            </Border>

            <!-- Warning Box -->
            <Border Background="#1A0000"
                    BorderBrush="{StaticResource AccentRed}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Margin="5,15,5,5">
                <StackPanel>
                    <TextBlock Text="⚠ WARNING" 
                              Foreground="{StaticResource AccentRed}"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="0,0,0,6"/>
                    <TextBlock TextWrapping="Wrap"
                              Foreground="{StaticResource SecondaryText}"
                              FontSize="11">
                        Disabling failsafes can result in loss of aircraft. Only disable for testing purposes and re-enable before flight.
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Info Box -->
            <Border Background="#0A0E14"
                    BorderBrush="{StaticResource AccentOrange}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="ℹ FAILSAFE ACTIONS" 
                              Foreground="{StaticResource AccentOrange}"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="0,0,0,6"/>
                    <TextBlock TextWrapping="Wrap"
                              Foreground="{StaticResource SecondaryText}"
                              FontSize="10"
                              LineHeight="18">
                        • RC Failsafe: Triggers when RC signal lost (throttle below threshold)
                        • Battery Failsafe: Triggers when voltage drops below threshold
                        • GPS Failsafe: Automatic EKF failsafe on GPS loss
                        • GCS Failsafe: Triggers when telemetry link lost
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
