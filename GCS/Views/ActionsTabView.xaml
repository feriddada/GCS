<UserControl x:Class="GCS.Views.ActionsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="480">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBackground" Color="#1C2128"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2D333D"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#8B949E"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#3FB950"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F85149"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FF9500"/>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="10">
        
        <!-- ARM / DISARM SECTION -->
        <TextBlock Text="VEHICLE CONTROL" 
                  Foreground="{StaticResource SecondaryText}"
                  FontSize="11"
                  FontWeight="Bold"
                  Margin="5,10,5,10"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- ARM Button -->
            <Button Grid.Column="0"
                    Content="ARM"
                    Command="{Binding ArmCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="{StaticResource AccentGreen}"
                    BorderBrush="{StaticResource AccentGreen}"
                    Foreground="#0A0E14"/>
            
            <!-- DISARM Button -->
            <Button Grid.Column="1"
                    Content="DISARM"
                    Command="{Binding DisarmCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="{StaticResource AccentRed}"
                    BorderBrush="{StaticResource AccentRed}"
                    Foreground="#0A0E14"/>
        </Grid>

        <!-- QUICK ACTIONS -->
        <TextBlock Text="QUICK ACTIONS" 
                  Foreground="{StaticResource SecondaryText}"
                  FontSize="11"
                  FontWeight="Bold"
                  Margin="5,20,5,10"/>
        
        <Button Content="RETURN TO LAUNCH (RTL)"
                Command="{Binding RtlCommand}"
                Style="{StaticResource ActionButton}"
                Background="{StaticResource AccentOrange}"
                BorderBrush="{StaticResource AccentOrange}"
                Foreground="#0A0E14"/>
        
        <Button Content="LOITER"
                Command="{Binding LoiterCommand}"
                Style="{StaticResource ActionButton}"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderBrush}"
                Foreground="{StaticResource PrimaryText}"/>
        
        <Button Content="LAND"
                Command="{Binding LandCommand}"
                Style="{StaticResource ActionButton}"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderBrush}"
                Foreground="{StaticResource PrimaryText}"/>

        <!-- FLIGHT MODE SELECTION -->
        <TextBlock Text="FLIGHT MODE" 
                  Foreground="{StaticResource SecondaryText}"
                  FontSize="11"
                  FontWeight="Bold"
                  Margin="5,20,5,10"/>
        
        <Border Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12"
                Margin="5">
            <StackPanel>
                <TextBlock Text="CURRENT MODE" 
                          Foreground="{StaticResource SecondaryText}"
                          FontSize="10"
                          FontWeight="Bold"
                          Margin="0,0,0,8"/>
                
                <TextBlock Text="{Binding FlightMode}" 
                          Foreground="{StaticResource AccentOrange}"
                          FontSize="20"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>
                
                <TextBlock Text="SELECT NEW MODE" 
                          Foreground="{StaticResource SecondaryText}"
                          FontSize="10"
                          FontWeight="Bold"
                          Margin="0,0,0,8"/>
                
                <ComboBox x:Name="ModeSelector"
                         SelectedIndex="{Binding SelectedModeIndex}"
                         Height="36"
                         FontSize="13"
                         Background="#0A0E14"
                         Foreground="{StaticResource PrimaryText}"
                         BorderBrush="{StaticResource BorderBrush}">
                    <ComboBoxItem Content="MANUAL"/>
                    <ComboBoxItem Content="STABILIZE"/>
                    <ComboBoxItem Content="FLY BY WIRE A (FBWA)"/>
                    <ComboBoxItem Content="FLY BY WIRE B (FBWB)"/>
                    <ComboBoxItem Content="AUTO"/>
                    <ComboBoxItem Content="RTL"/>
                    <ComboBoxItem Content="LOITER"/>
                    <ComboBoxItem Content="CIRCLE"/>
                    <ComboBoxItem Content="GUIDED"/>
                    <ComboBoxItem Content="CRUISE"/>
                    <ComboBoxItem Content="AUTOTUNE"/>
                    <ComboBoxItem Content="QSTABILIZE"/>
                    <ComboBoxItem Content="QHOVER"/>
                    <ComboBoxItem Content="QLOITER"/>
                    <ComboBoxItem Content="QLAND"/>
                    <ComboBoxItem Content="QRTL"/>
                    <ComboBoxItem Content="ACRO"/>
                </ComboBox>
                
                <Button Content="SET MODE"
                       Command="{Binding SetModeCommand}"
                       Height="40"
                       Margin="0,15,0,0"
                       Background="{StaticResource AccentGreen}"
                       BorderBrush="{StaticResource AccentGreen}"
                       Foreground="#0A0E14"
                       FontWeight="Bold"
                       FontSize="13"
                       Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0"
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

    </StackPanel>
</UserControl>
