<Window x:Class="GCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GCS.Views"
        mc:Ignorable="d"
        Title="Ground Control Station" 
        Height="900" 
        Width="1600"
        Background="#0A0E14"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Modern Aviation Theme Colors -->
        <SolidColorBrush x:Key="DarkBackground" Color="#0A0E14"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#151922"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1C2128"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2D333D"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#8B949E"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#58A6FF"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#39D0D8"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#3FB950"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FF9500"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F85149"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D333D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#373E47"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Top Bar -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
                <RowDefinition Height="80"/>
                <!-- Bottom Panel -->
            </Grid.RowDefinitions>

            <!-- TOP BAR -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PanelBackground}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Link Status Button -->
                    <Button Grid.Column="0" 
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="10,0,0,0"
                            Click="LinkButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <!-- Status Indicator -->
                            <Ellipse Width="10" Height="10" Margin="0,0,10,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource AccentRed}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Telemetry.IsConnected}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource AccentGreen}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <TextBlock Text="LINK" 
                                      FontWeight="Bold" 
                                      FontSize="14"
                                      Foreground="{StaticResource PrimaryText}"/>
                        </StackPanel>
                    </Button>

                    <!-- Center: Vehicle Info - Fixed Alignment -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                        <!-- Armed Status Badge -->
                        <Border CornerRadius="4" 
                                Padding="10,4" 
                                Margin="0,0,20,0"
                                VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#3FB950"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Telemetry.IsArmed}" Value="True">
                                            <Setter Property="Background" Value="#F85149"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding Telemetry.ArmedStatus}"
                                      Foreground="White"
                                      FontSize="12"
                                      FontWeight="Bold"/>
                        </Border>

                        <!-- Vehicle ID -->
                        <TextBlock Text="VEHICLE" 
                                  Foreground="{StaticResource SecondaryText}"
                                  FontSize="11"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Telemetry.SystemId}" 
                                  Foreground="{StaticResource AccentCyan}"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="0,0,3,0"/>
                        <TextBlock Text=":" 
                                  Foreground="{StaticResource SecondaryText}"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="0,0,3,0"/>
                        <TextBlock Text="{Binding Telemetry.ComponentId}" 
                                  Foreground="{StaticResource AccentCyan}"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>

                        <!-- Flight Mode -->
                        <TextBlock Text="MODE:" 
                                  Foreground="{StaticResource SecondaryText}"
                                  FontSize="11"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Telemetry.FlightMode}" 
                                  Foreground="{StaticResource AccentOrange}"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>

                        <!-- Weather Button -->
                        <Button x:Name="WeatherButton"
                                Command="{Binding Weather.TogglePopupCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="8,4"
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="☁" 
                                          FontSize="16" 
                                          Foreground="{StaticResource PrimaryText}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Weather.Temperature, StringFormat={}{0:F0}°C}"
                                          Foreground="{StaticResource PrimaryText}"
                                          FontSize="12"
                                          FontWeight="Bold"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Weather Popup -->
                        <Popup IsOpen="{Binding Weather.IsPopupOpen}"
                               PlacementTarget="{Binding ElementName=WeatherButton}"
                               Placement="Bottom"
                               StaysOpen="False"
                               AllowsTransparency="True">
                            <Border Background="#1C2128"
                                    BorderBrush="#2D333D"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20" Opacity="0.5" ShadowDepth="4"/>
                                </Border.Effect>

                                <StackPanel Width="280">
                                    <!-- Header -->
                                    <Grid Margin="0,0,0,12">
                                        <TextBlock Text="Weather Conditions"
                                                  Foreground="#E6EDF3"
                                                  FontSize="14"
                                                  FontWeight="Bold"/>
                                        <Button Content="⟳" 
                                               Command="{Binding Weather.RefreshCommand}"
                                               HorizontalAlignment="Right"
                                               Background="Transparent"
                                               Foreground="#8B949E"
                                               BorderThickness="0"
                                               FontSize="14"
                                               Cursor="Hand"
                                               Padding="4"/>
                                    </Grid>

                                    <!-- Flight Condition Banner -->
                                    <Border CornerRadius="4" 
                                            Padding="10,8"
                                            Margin="0,0,0,12">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#1A3FB950"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Weather.IsGoodForFlight}" Value="False">
                                                        <Setter Property="Background" Value="#1AF85149"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Weather.FlightConditionText}"
                                                  Foreground="{Binding Weather.FlightConditionColor}"
                                                  FontWeight="Bold"
                                                  FontSize="12"
                                                  HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- Weather Details Grid -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Row 0: Temperature & Humidity -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                                            <TextBlock Text="TEMPERATURE" Foreground="#8B949E" FontSize="9" FontWeight="Bold"/>
                                            <TextBlock Foreground="#39D0D8" FontSize="18" FontWeight="Bold">
                                                <Run Text="{Binding Weather.Temperature, StringFormat={}{0:F1}}"/><Run Text="°C"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                            <TextBlock Text="HUMIDITY" Foreground="#8B949E" FontSize="9" FontWeight="Bold"/>
                                            <TextBlock Foreground="#39D0D8" FontSize="18" FontWeight="Bold">
                                                <Run Text="{Binding Weather.Humidity}"/><Run Text="%"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Row 1: Wind -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                                            <TextBlock Text="WIND SPEED" Foreground="#8B949E" FontSize="9" FontWeight="Bold"/>
                                            <TextBlock Foreground="#E6EDF3" FontSize="14">
                                                <Run Text="{Binding Weather.WindSpeed, StringFormat={}{0:F1}}"/><Run Text=" km/h"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                                            <TextBlock Text="WIND DIR" Foreground="#8B949E" FontSize="9" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Weather.WindDirection}" 
                                                      Foreground="#E6EDF3" FontSize="14"/>
                                        </StackPanel>

                                        <!-- Row 2: Visibility & Pressure -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">
                                            <TextBlock Text="VISIBILITY" Foreground="#8B949E" FontSize="9" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Weather.VisibilityText}" 
                                                      Foreground="#E6EDF3" FontSize="14"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                                            <TextBlock Text="PRESSURE" Foreground="#8B949E" FontSize="9" FontWeight="Bold"/>
                                            <TextBlock Foreground="#E6EDF3" FontSize="14">
                                                <Run Text="{Binding Weather.Pressure, StringFormat={}{0:F0}}"/><Run Text=" hPa"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Row 3: Description -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                            <TextBlock Text="CONDITIONS" Foreground="#8B949E" FontSize="9" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Weather.Description}" 
                                                      Foreground="#FF9500" 
                                                      FontSize="12"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Last Updated -->
                                    <TextBlock Text="{Binding Weather.LastUpdated, StringFormat=Updated: {0}}"
                                              Foreground="#4A5158"
                                              FontSize="10"
                                              HorizontalAlignment="Right"
                                              Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </StackPanel>

                    <!-- Right: Window Controls -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal"
                                Margin="0,0,10,0">
                        <Button Content="─" 
                                Width="40" Height="40"
                                Style="{StaticResource ModernButtonStyle}"
                                Click="MinimizeButton_Click"/>
                        <Button Content="□" 
                                Width="40" Height="40"
                                Style="{StaticResource ModernButtonStyle}"
                                Click="MaximizeButton_Click"/>
                        <Button Content="✕" 
                                Width="40" Height="40"
                                Style="{StaticResource ModernButtonStyle}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL: Flight Data (contains its own TabControl) -->
                <Border Grid.Column="0" 
                        Background="{StaticResource PanelBackground}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <!-- FlightPanelView is bound to Telemetry and contains all tabs -->
                    <views:FlightPanelView DataContext="{Binding Telemetry}"/>
                </Border>

                <!-- RIGHT PANEL: Map -->
                <Border Grid.Column="1" 
                        Background="{StaticResource DarkBackground}">
                    <views:MapView DataContext="{Binding Telemetry}"/>
                </Border>
            </Grid>

            <!-- BOTTOM PANEL: Alerts -->
            <Border Grid.Row="2" 
                    Background="{StaticResource PanelBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <views:AlertsPanelView DataContext="{Binding Telemetry}"/>
            </Border>

            <!-- CONNECTION POPUP (Hidden by default) -->
            <Border x:Name="ConnectionPopup"
                    Grid.Row="1"
                    Width="400"
                    Height="500"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10,10,0,0"
                    Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource AccentCyan}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Visibility="Collapsed"
                    Panel.ZIndex="100">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    BlurRadius="30" 
                                    ShadowDepth="0" 
                                    Opacity="0.7"/>
                </Border.Effect>
                <views:ConnectionView DataContext="{Binding Connection}"/>
            </Border>
        </Grid>
    </Border>
</Window>
